@model List<Softox.Models.TeamRanking>
<div class="col-2">
    <table class="table table-bordered table_team">
        <tr>
            <th>#</th>
            <th>Equipe</th>
            <th>Pts</th>
            <th>J</th>
            <th>Diff</th>
        </tr>
        @foreach (var item in @Model.Select((value, index) => new { value, index }))
        {
            <tr>
                <td>@(item.index + 1)</td>
                <td>
                    <img @Html.Raw(@item.value.Image) />@Html.Raw(@item.value.TeamName)</td>
                <td>@item.value.Point</td>
                <td>@item.value.Day</td>
                <td>@item.value.Difference</td>
            </tr>
        }
    </table>
</div>