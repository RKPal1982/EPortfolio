<h2>C# 1 - Parameters</h2>

<h3>Optional parameters</h3>
<pre>
public static void OptionalParameters(int param1 = 1, int param2 = 2)
{
    Console.WriteLine(param1 + " - " + param2);
}

public static void Main()
{
    OptionalParameters(3, 4); // Write "3 - 4"
    OptionalParameters(5); // Write "5 - 2"
}
</pre>

<h3>Named parameters</h3>
<pre>
public static void OptionalParameters(int param1 = 1, int param2 = 2)
{
    Console.WriteLine(param1 + " - " + param2);
}

public static void NamedParameters()
{
    OptionalParameters(param2: 3);
}

public static void Main()
{
    NamedParameters(); // Write "1 - 3"
}
</pre>

<h3>Out parameters</h3>
<pre>
public static void OutParameter(out int param)
{
    param = 5; // The param must be initialize before the end of the method
}

public static void Main()
{
    int param;
    OutParameter(out param);
    Console.WriteLine(param); // Write "5"
}
</pre>

<h3>Ref parameters</h3>
<pre>
public static void RefParameter(ref int param)
{
    param += 2;
}

public static void Main()
{
    int param = 1; // The param must be initialize before the call of the method
    RefParameter(ref param);
    Console.WriteLine(param); // Write "3"
}
</pre>

<h3>Array parameters</h3>
<pre>
public static void ArrayParameter(params int[] paramArray)
{
    foreach (var param in paramArray)
        Console.Write(param + " ");
}

public static void Main()
{
    ArrayParameter(1, 2, 5); // Write "1 2 5 "
}
</pre>