@model List<DataModel.Football.PlayerRanking>
<div class="col-md-3">
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Player</th>
            <th>Goal</th>
            <th>Match</th>
        </tr>
        @foreach (var item in @Model.Select((value, index) => new { value, index }))
        {
            <tr>
                <td>@(item.index + 1)</td>
                <td><img @Html.Raw(@item.value.Image) />@Html.Raw(item.value.PlayerName)</td>
                <td>@item.value.Goal</td>
                <td>@item.value.Match</td>
            </tr>
        }
    </table>
</div>